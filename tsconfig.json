{
    "compileOnSave": true,  
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "downlevelIteration": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es5",
      "watch": true,
      "lib": [ "dom", "es2015.promise", "es5" ]
    },
    "exclude": [
      "node_modules",
      "bower_components",
      "typings",
      "Scripts/typings"
    ]
  }